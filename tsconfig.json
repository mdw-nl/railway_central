{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "target/classes/static/app",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es6",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "app/*": ["src/main/webapp/app/*"]
    }
  },
  "include": ["src/main/webapp/app", "src/main/webapp/polyfills.ts", "src/main/webapp/main.ts"],
  "exclude": ["node_modules"]
}